@model BDFIREBASE.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Editar contacto</h4>
    </div>

    <div class="panel-body">
        <form action="@Url.Action("Editar", "Mantenedor")" method="post">
            <input type="hidden" name="IdContacto" value="@Html.DisplayTextFor(m=>m.IdContacto)" />
            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" type="text" name="Nombre" value="@Html.DisplayTextFor(m=>m.Nombre)" />
            </div>

            <div class="form-group">
                <label>Correo</label>
                <input class="form-control" type="email" name="Correo" value="@Html.DisplayTextFor(m=>m.Correo)" />
            </div>

            <div class="form-group">
                <label>Teléfono</label>
                <input class="form-control" type="tel" name="Telefono" value="@Html.DisplayTextFor(m=>m.Telefono)" />
            </div>

            <hr />
            <button type="submit" class="btn btn-primary">Editar</button>
            <button class="btn btn-danger" href="@Url.Action("Inicio", "Mantenedor")">Volver</button>

            <a></a>

        </form>
    </div>
</div>



